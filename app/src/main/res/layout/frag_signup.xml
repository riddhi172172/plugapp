<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_bg"
        android:visibility="gone" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:paddingLeft="50dip"
            android:paddingRight="50dip">


            <ImageView
                android:layout_width="105dip"
                android:layout_height="105dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/very_large_space"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/large_space"
                android:gravity="center_vertical"
                android:text="Sign up"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/very_big_text" />


            <EditText
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/very_very_large_space"
                android:background="@drawable/selecter_edt"
                android:hint="Full Name"
                android:inputType="textCapSentences"
                android:padding="10dip"
                android:singleLine="true"
                android:textSize="@dimen/normal_text" />


            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_height"
                android:layout_marginTop="@dimen/very_large_space"
                android:background="@drawable/selecter_edt"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dip"
                android:singleLine="true"
                android:textSize="@dimen/normal_text" />


            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_height"
                android:layout_marginTop="@dimen/large_space"
                android:background="@drawable/selecter_edt"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dip"
                android:singleLine="true"
                android:textSize="@dimen/normal_text" />

            <EditText
                android:id="@+id/txtRePassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_height"
                android:layout_marginTop="@dimen/very_large_space"
                android:background="@drawable/selecter_edt"
                android:hint="Re-Type Password"
                android:inputType="textPassword"
                android:padding="10dip"
                android:singleLine="true"
                android:textSize="@dimen/normal_text" />/>

            <EditText
                android:id="@+id/txtDob"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_height"

                android:layout_marginTop="@dimen/very_large_space"
                android:background="@drawable/selecter_edt"
                android:editable="false"
                android:focusable="true"
                android:elevation="5dip"
                android:hint="Birth Date"
                android:padding="10dip"
                android:singleLine="true"
                android:textSize="@dimen/normal_text" />


            <Button
                android:id="@+id/btnSignup"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/very_large_space"
                android:layout_marginTop="@dimen/very_very_large_space"
                android:background="@drawable/btn_rounded_rect"
                android:text="sign up" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>