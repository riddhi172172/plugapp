<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg_new"

    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/img_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="@dimen/very_large_space">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/very_very_large_space"
            android:text="Please Enter your Email"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/big_text" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_space"
            android:layout_marginRight="@dimen/very_large_space"
            android:layout_marginTop="@dimen/very_large_space" />

        <Button
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/very_very_large_space"
            android:background="@drawable/btn_rounded_rect"
            android:text="Send"
            android:textAllCaps="false"
            android:textSize="@dimen/big_text" />
    </LinearLayout>

</RelativeLayout>